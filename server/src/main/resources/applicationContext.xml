<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath*:appEngineContext.xml"></import>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations" value="classpath:jdbc.properties"/>
    </bean>

    <bean id="dataSource" class="com.jossv.framework.dao.JossvDataSource" init-method="init" destroy-method="close" >
        <property name="url" value="jdbc:mysql://127.0.0.1:3306/XXX" />
        <property name="username" value="root" />
        <property name="password" value="root" />
        <property name="maxActive" value="20" />
        <property name="initialSize" value="1" />
        <property name="maxWait" value="60000" />
        <property name="minIdle" value="1" />
        <property name="timeBetweenEvictionRunsMillis" value="3000" />
        <property name="minEvictableIdleTimeMillis" value="300000" />
        <property name="validationQuery" value="SELECT 'x' FROM DUAL" />
        <property name="testWhileIdle" value="true" />
        <property name="testOnBorrow" value="false" />
        <property name="testOnReturn" value="false" />
    </bean>

    <bean id="classTableFactory" class="com.jossv.framework.dao.annotation.factory.impl.ClassTableFactory">
        <property name="scanPackage" value="com.jossv.model"></property>
    </bean>

    <bean id="classEntityFactory" class="com.jossv.framework.dao.annotation.factory.impl.ClassEntityFactory">
        <property name="scanPackage" value="com.jossv.model"></property>
        <property name="tableFactory" ref="classTableFactory"></property>
    </bean>

    <bean id="systemDaoFactory" class="com.jossv.framework.dao.DaoFactoryImpl">
        <constructor-arg ref="classEntityFactory"></constructor-arg>
        <constructor-arg ref="dataSource"></constructor-arg>
    </bean>

    <bean id="systemService" class="com.jossv.service.impl.SystemServiceImpl">
        <property name="daoFactory" ref="systemDaoFactory"></property>
    </bean>



</beans>